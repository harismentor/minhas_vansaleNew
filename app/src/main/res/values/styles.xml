<resources>

    <!--Theme.AppCompat.Light.DarkActionBar-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--EditText  Style-->


    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:editTextBackground">@color/colorTransparent</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
    <style name="TableHeaderTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_height">50dp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_balck_border_without_right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TableItemTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:background">@drawable/rectangle_balck_border_without_right</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--FullScreen-->
    <!--Table title TextView  Style-->
    <style name="TextViewTableTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/padding_m</item>
        <item name="android:layout_marginRight">@dimen/padding_m</item>
        <item name="android:layout_marginTop">@dimen/padding_l</item>
        <item name="android:layout_marginBottom">@dimen/padding_l</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>

    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:imeOptions">flagNoExtractUi</item>

        <!--<item name="colorControlActivated">@color/textDarkBlue</item>-->
        <!--<item name="colorControlHighlight">@color/textRed</item>-->


        <!-- colorPrimary is used for the default action bar background -->
        <!--<item name="colorPrimary">@color/textRed</item>-->
        <!-- colorPrimaryDark is used for the status bar -->
        <!--<item name="colorPrimaryDark">@color/textGray</item>-->
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
        <!--<item name="colorControlNormal">@color/colorWhite</item>-->

    </style>

    <!-- View Style dark Theme-->

    <style name="Background_white">
        <item name="android:background">@color/colorWhite</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="ProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:progressBarStyle">?android:attr/progressBarStyle</item>
        <item name="android:visibility">gone</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <!--Error View Style-->
    <style name="ErrorView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="ev_subtitleColor">@color/error_view_text_light</item>
        <item name="ev_errorImage">@drawable/error_view_cloud</item>
        <item name="ev_showTitle">true</item>
        <item name="ev_showSubtitle">true</item>
        <item name="ev_showRetryButton">false</item>
        <item name="ev_retryButtonBackground">@drawable/error_view_retry_button_background</item>
        <item name="ev_retryButtonTextColor">@color/errorView_accent</item>
    </style>


    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <!-- View  white Theme-->

    <style name="ViewTheme_white">

        <item name="android:textColor">@color/colorGrayDark</item>
        <item name="colorAccent">@color/colorGrayDark</item>
        <item name="colorControlNormal">@color/colorGrayDark</item>

    </style>


    <!-- View Style dark Theme-->

    <style name="ViewTheme_dark">
        <item name="android:textColor">@color/primaryText</item>
        <item name="colorAccent">@color/colorGrayDark</item>
        <item name="colorControlNormal">@color/colorGrayDark</item>

    </style>

    <!-- View Style dark Theme-->

    <style name="ViewTheme_Light">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="colorAccent">@color/colorGrayLight</item>
        <item name="colorControlNormal">@color/colorGrayLight</item>

    </style>

    <!--TextView  Style-->

   <style name="TextViewTableColStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grayText</item>
       <item name="android:textColorHint">@color/textHint</item>
       <item name="android:textSize">@dimen/text_m</item>
       <item name="android:padding">@dimen/padding_s</item>
       <item name="android:gravity">center</item>
       <item name="android:lines">1</item>

   </style>

    <style name="TextViewTableColStyleNew" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grayText</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>


    </style>


    <!--TextView  Style-->
    <style name="TextViewBoldGrayStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>

    </style>


    <!--Toolbar Style-->

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="DialogAnimations" />
    <style name="DialogAnimations.SmileWindow">
        <item name="@android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_top</item>
    </style>



    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColorHint">@color/colorGrayLight</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="colorAccent">@color/colorGrayLight</item>
        <item name="colorControlNormal">@color/colorGrayLight</item>
    </style>




    <!--SwitchCompat Style-->
    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/switchNormal</item>
        <item name="colorControlActivated">@color/switchActivated</item>
    </style>


    <style name="EditTextReceiptStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:lines">1</item>

    </style>


    <style name="EditTextReceiptStyleNew" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:lines">1</item>
    </style>



    <style name="TableTotalTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_height">50dp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_balck_border_without_right_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>



</resources>
