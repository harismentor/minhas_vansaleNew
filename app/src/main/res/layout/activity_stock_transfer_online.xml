<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Stock_Transfer_Online">
    <include
        layout="@layout/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

    <com.rey.material.widget.Button
        android:id="@+id/button_approvestock"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/padding_l"
        android:layout_marginTop="@dimen/padding_m"
        android:layout_marginEnd="@dimen/padding_l"
        android:layout_marginBottom="@dimen/padding_m"
        android:layout_weight="1"
        android:background="@drawable/rectangle_greenbox"
        android:paddingLeft="@dimen/button_padding"
        android:paddingRight="@dimen/button_padding"
        android:text="Stock Transfer"
        android:textAllCaps="true"
        android:textColor="@color/buttonGreen"
        android:textSize="@dimen/text_m"
        app:rd_enable="true" />
    </LinearLayout>
</LinearLayout>