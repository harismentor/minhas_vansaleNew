<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_m">

        <TextView
            android:id="@+id/textView_expenseType"
            style="@style/TextViewTableColStyleNew"
            android:layout_weight="4"
            android:gravity="start|center"
            android:layout_marginLeft="@dimen/padding_xl"
            android:layout_marginRight="@dimen/padding_xl"/>

<!--expense amount-->
        <EditText
            android:id="@+id/editText_expense_amount"
            style="@style/EditTextReceiptStyleNew"
            android:layout_marginLeft="@dimen/padding_xl"
            android:layout_marginRight="@dimen/padding_xl"
            android:layout_weight="2"
            android:background="@drawable/rectangle_input"
            android:gravity="start|center"
            android:inputType="numberDecimal" />

        <!--receipt no-->

        <EditText
            android:id="@+id/editText_expense_receiptNo"
            style="@style/EditTextReceiptStyleNew"
            android:layout_marginLeft="@dimen/padding_xl"
            android:layout_marginRight="@dimen/padding_xl"
            android:layout_weight="2"
            android:background="@drawable/rectangle_input"
            android:gravity="start|center"
            android:inputType="text" />

        <!--remark no-->

        <EditText
            android:id="@+id/editText_expense_remark"
            style="@style/EditTextReceiptStyleNew"
            android:layout_weight="4"
            android:background="@drawable/rectangle_input"
            android:gravity="start|center"
            android:inputType="text"
            android:layout_marginLeft="@dimen/padding_xl"
            android:layout_marginStart="@dimen/padding_xl" />


    </LinearLayout>




