<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/txt_products"
        style="@style/TableItemTheme"
        android:layout_width="200dp"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:text="@string/products" />

    <TextView
        android:id="@+id/txt_sale_qty"
        style="@style/TableItemTheme"
        android:layout_width="@dimen/dim_80"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:text="@string/sale_qty" />

    <TextView
        android:id="@+id/txt_return_qty"
        style="@style/TableItemTheme"
        android:layout_width="100dp"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:text="@string/return_qty" />



    <TextView
        android:id="@+id/txt_sale_percent"
        android:layout_width="110dp"
        style="@style/TableItemTheme"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:text="@string/sale_percentage" />

    <TextView
        android:id="@+id/txt_return_percent"
        android:layout_width="120dp"
        style="@style/TableItemTheme"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:text="@string/return_percentage" />

    <TextView
        android:id="@+id/txt_foc"
        android:layout_width="@dimen/dim_80"
        style="@style/TableItemTheme"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:text="@string/foc" />

    <TextView

        android:id="@+id/txt_remarks"
        style="@style/TableItemTheme"
        android:layout_width="150dp"
        android:layout_height="45dp"

        android:gravity="left"
        android:ellipsize="end"
        android:background="@drawable/rectangle_border_black"
        android:text="@string/remarks" />



</LinearLayout>



