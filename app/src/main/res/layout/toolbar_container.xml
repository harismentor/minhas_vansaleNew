<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:gravity="center"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:gravity="center"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:paddingEnd="@dimen/padding_4xxl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >


            <ImageButton
                android:id="@+id/imageButton_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_toolbar_back_white"
                android:background="@color/colorTransparent"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginStart="@dimen/padding_2xxl"
                android:layout_marginEnd="@dimen/padding_xl"
                android:focusable="true" />

            <TextView
                android:id="@+id/textView_toolbar_shopNameAndCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="start|center"

                android:drawableStart="@drawable/ic_shop_white"
                android:drawablePadding="@dimen/padding_m"
                android:layout_marginStart="@dimen/padding_xxl"
                android:layout_marginEnd="@dimen/padding_4xxl"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_m"
                android:theme="@style/ViewTheme_white" />
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"

                android:id="@+id/ly_sync"
                android:orientation="vertical">


                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/textView_toolbar_shopSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_sync_24"
                    android:background="@color/colorTransparent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_marginStart="@dimen/padding_2xxl"
                    android:layout_marginEnd="@dimen/padding_xl"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/txt_sync"
                    android:text="Sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_2xxl"
                    android:layout_marginEnd="@dimen/padding_xl"
                    android:visibility="gone"
                    android:drawablePadding="@dimen/padding_m"

                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_m"
                    android:theme="@style/ViewTheme_white" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="gone"
                android:id="@+id/ly_settings"
                android:orientation="vertical">


                <ImageButton

                    android:id="@+id/textView_toolbar_sale_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_settings_24"
                    android:background="@color/colorTransparent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_marginStart="@dimen/padding_2xxl"
                    android:layout_marginEnd="@dimen/padding_xl"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/txt_settings"
                    android:text="Settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_2xxl"
                    android:layout_marginEnd="@dimen/padding_xl"

                    android:drawablePadding="@dimen/padding_m"

                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_m"
                    android:theme="@style/ViewTheme_white" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:id="@+id/lyt_share"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ib_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorTransparent"

                    android:clickable="false"
                    android:src="@android:drawable/ic_menu_share"
                    />
                <TextView
                    android:id="@+id/txt_share"
                    android:text="Share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/padding_m"
                    android:clickable="false"

                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_m"
                    android:theme="@style/ViewTheme_white" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <TextView

                android:layout_marginLeft="50dp"
                android:layout_weight="1.5"
                android:id="@+id/textView_toolbar_shopNamedivision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_marginTop="@dimen/padding_xl"
                android:layout_marginBottom="@dimen/padding_xl"
                android:drawablePadding="@dimen/padding_m"
                android:layout_marginStart="@dimen/padding_xxl"
                android:layout_marginEnd="@dimen/padding_4xxl"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_m"
                android:theme="@style/ViewTheme_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/padding_4xxl"
            android:layout_marginEnd="@dimen/padding_xl"
            android:layout_marginBottom="@dimen/padding_xxl">

            <!--Type-->
            <LinearLayout
                android:id="@+id/viewGroup_saleType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/padding_4xxl"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--         <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                     />-->

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_toolbar_ShopType"
                        style="@style/Material.Widget.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/padding_l"
                        android:minHeight="30dp"
                        android:theme="@style/ViewTheme_white" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_horizontal"
                    android:layout_marginTop="@dimen/padding_l"
                    android:background="@color/colorWhite" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_scanbarcode"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/barcode_scanning"
                android:clickable="true"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/imageButton_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_update_white"
                android:background="@color/colorTransparent"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginStart="@dimen/padding_4xxl"
                android:layout_marginEnd="@dimen/padding_xl"
                android:focusable="true"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>