<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGraylight">

        <TextView
            android:id="@+id/tv_outstanding_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_m"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="Date"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_m"
            android:lines="1"/>

        <TextView
            android:id="@+id/tv_outstanding_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_m"
            android:lines="1"
            android:layout_alignParentRight="true"
            android:text="Days"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_m" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/padding_xl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Invoice"
        android:lines="1"
        android:textColor="@color/colorGrayMedium"
        android:textSize="@dimen/text_m" />


    <TextView
        android:id="@+id/tv_outstanding_invoiceno"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:lines="1"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_l"
        android:layout_marginBottom="@dimen/padding_xl"/>

</LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGraylight"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/padding_xl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Amount"
                android:lines="1"
                android:textColor="@color/colorGrayMedium"
                android:textSize="@dimen/text_m" />


            <TextView
                android:id="@+id/tv_outstanding_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_l"
                android:layout_marginBottom="@dimen/padding_xl"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGraylight"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/padding_xl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Paid"
                android:lines="1"
                android:textColor="@color/colorGrayMedium"
                android:textSize="@dimen/text_m" />


            <TextView
                android:id="@+id/tv_outstanding_paid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_l"
                android:layout_marginBottom="@dimen/padding_xl"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGraylight"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/padding_xl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Balance"
                android:lines="1"
                android:textColor="@color/buttonRed"
                android:textSize="@dimen/text_m" />


            <TextView
                android:id="@+id/tv_outstanding_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_l"
                android:layout_marginBottom="@dimen/padding_xl"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
