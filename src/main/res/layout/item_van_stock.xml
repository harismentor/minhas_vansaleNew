<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_l"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cd_list"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Product Type"
            android:textColor="@color/grayText"
            android:textSize="@dimen/text_s"
            android:layout_centerVertical="true"
            android:lines="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Product Qty/Unit"
            android:textColor="@color/grayText"
            android:textSize="@dimen/text_s"
            android:layout_centerVertical="true"
            android:lines="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/grayText"
            android:textSize="@dimen/text_s"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:lines="1"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qty"
            android:textColor="@color/grayText"
            android:textSize="@dimen/text_s"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:lines="1"
            android:visibility="visible"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_item_vanStock_productType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Product Type"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_l"
            android:layout_centerVertical="true"
            android:lines="1"/>

        <TextView
            android:id="@+id/textView_item_vanStock_productUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Product Qty/Unit"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_l"
            android:layout_centerVertical="true"
            android:lines="1"/>

        <TextView
            android:id="@+id/textView_item_vanStock_productCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_l"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:lines="1"/>

        <TextView
            android:id="@+id/textView_item_vanStock_totalQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qty"
            android:textColor="@color/colorGrayDashBoard"
            android:textSize="@dimen/text_l"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:lines="1"
            android:visibility="visible"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_l">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/grayText"
            android:textSize="@dimen/text_m"
            android:layout_centerVertical="true"
            android:lines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MRP"
            android:layout_alignParentRight="true"
            android:textColor="@color/buttonRed"
            android:textSize="@dimen/text_m"
            android:layout_centerVertical="true"
            android:lines="1"
            android:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/textView_item_vanStock_productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Luxen Tyre Shine"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_l"
            android:layout_centerVertical="true"
            android:lines="1"/>

        <TextView
            android:id="@+id/textView_item_vanStock_RetailPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/colorGrayDashBoard"
            android:textSize="@dimen/text_l"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:lines="1"
            android:visibility="visible"/>


       </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
