<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="0dp"
    app:contentPaddingRight="@dimen/padding_m"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/padding_xl"
        android:layout_marginEnd="@dimen/padding_xl"
        android:layout_below="@+id/ly_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="Invoice No"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/buttonRed"
                android:textSize="@dimen/text_m"
                android:layout_marginStart="@dimen/padding_xl"
                android:layout_centerVertical="true"
                android:lines="1"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/padding_m"
            >

            <ImageView
                android:id="@+id/view_shop_status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_round_red_12dp"/>

            <TextView
                android:id="@+id/textView_invoiceno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_xl"
                android:layout_marginRight="@dimen/padding_4xxl"
                android:layout_toLeftOf="@+id/textView_invoicedate"
                android:layout_toRightOf="@+id/view_shop_status_image"
                android:singleLine="true"
                android:text="123456"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_l" />


            <TextView
                android:id="@+id/textView_invoicedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:text="62"
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_l" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_l">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="Bill Amount"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m"
                android:layout_marginStart="@dimen/padding_xl"
                android:layout_centerVertical="true"
                android:lines="1"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/padding_m"
            >

            <TextView

                android:id="@+id/textView_invoice_billamnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/textView_invoicebalance"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_l" />


            <TextView
                android:id="@+id/textView_invoicebalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:text=""
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_xl" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_l">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="Amount Entered"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding_xl"
                android:lines="1"
                android:text="Final Balance"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/padding_m"
            >

            <TextView
                android:id="@+id/textView_amountentered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:lines="1"
                android:text=""
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_xl" />
            <TextView
                android:id="@+id/textView_invoicefinalbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:lines="1"
                android:text=""
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_xl" />

        </RelativeLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>
