<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/layout_sales_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGraylight"
            >

            <TextView
                android:id="@+id/textView_item_previewCart_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center|left"
                style="@style/TextViewTableColStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewTableColStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="2.5"
                android:gravity="left|center"
                android:text="@string/code"
                android:textSize="@dimen/text_s"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_l"
                android:layout_weight="5"
                android:gravity="left|center"
                android:text="@string/name"
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_s" />

            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center|start"
                android:padding="@dimen/padding_l"
                android:text="@string/unit"
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_s" />-->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center|start"
                android:text="@string/qty"
                android:textColor="@color/grayText"
                android:textSize="@dimen/text_s" />


        </LinearLayout>


        <!--<include
            layout="@layout/item_divider_horizontal_dark"
            android:baselineAligned="false" />-->

        <!--add cart actions-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--code-->


            <TextView
                android:id="@+id/textView_item_previewCart_code"
                style="@style/TextViewTableColStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="2.5"
                android:gravity="left|center"
                android:textColor="@color/colorGrayDashBoard"
                android:text="@string/code"
                android:textSize="@dimen/text_m"/>

            <TextView
                android:id="@+id/textView_item_previewCart_productName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_l"
                android:layout_weight="5"
                android:gravity="left|center"
                android:text="@string/name"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />

            <!--<TextView
                android:id="@+id/textView_item_cart_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center|left"
                android:padding="@dimen/padding_l"
                android:text="@string/unit"
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />-->

            <TextView
                android:id="@+id/textView_item_previewCart_qty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/colorGrayDashBoard"
                android:textSize="@dimen/text_m" />


            <!--unit dropDown-->


        </LinearLayout>

        <include layout="@layout/item_divider_horizontal_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:layout_marginLeft="6dp"
                    android:textSize="@dimen/text_s"
                    android:gravity="center"
                    android:text="@string/unit_price" />

                <TextView
                    android:id="@+id/textView_item_previewCart_unitPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_m" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_dark" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">


                <TextView
                    style="@style/TextViewTableColStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/total"
                    android:textColor="@color/text_green" />

                <TextView
                    android:id="@+id/textView_item_previewCart_total"
                    style="@style/TextViewTableColStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:text=""
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>